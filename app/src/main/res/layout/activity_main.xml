<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="190dp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient"
        tools:context=".MainActivity">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="300sp"
            android:layout_height="400sp"
            android:layout_marginBottom="672dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calc">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/one"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="#303030"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/four"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:text="4"
                    android:textAlignment="center"
                    android:textColor="#303030"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/seven"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:text="7"
                    android:textAlignment="center"
                    android:textColor="#303030"
                    android:textSize="34sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/two"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:includeFontPadding="true"
                    android:text="2"
                    android:textAlignment="center"
                    android:textColor="#303030"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/five"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:text="5"
                    android:textAlignment="center"
                    android:textColor="#303030"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/eight"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:text="8"
                    android:textAlignment="center"
                    android:textColor="#303030"
                    android:textSize="34sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/three"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:text="3"
                    android:textAlignment="center"
                    android:textColor="#030300"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/six"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:text="6"
                    android:textAlignment="center"
                    android:textColor="#030300"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/nine"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:text="9"
                    android:textAlignment="center"
                    android:textColor="#030300"
                    android:textSize="34sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/back2"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:clickable="true"
                    app:srcCompat="@android:drawable/ic_menu_revert" />

                <TextView
                    android:id="@+id/zero_str"
                    android:layout_width="wrap_content"
                    android:layout_height="100sp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#030300"
                    android:textSize="34sp" />

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:clickable="true"
                    app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Нумерология 888"
            android:textColor="#303030"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.562"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.034" />

        <EditText
            android:id="@+id/date2"
            android:layout_width="339dp"
            android:layout_height="56dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="1224dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:editable="true"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:hint="Дата"
            android:inputType="date"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="#303030"
            android:textColorHint="#303030"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/calc"
            android:layout_width="253dp"
            android:layout_height="55dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/gradient"
            android:fontFamily="sans-serif-light"
            android:text="Рассчитать"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="@+id/date2"
            app:layout_constraintHorizontal_bias="0.581"
            app:layout_constraintStart_toStartOf="@+id/date2"
            app:layout_constraintTop_toBottomOf="@+id/date2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="31dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/Label"
            app:layout_constraintHorizontal_bias="0.931"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.035"
            app:srcCompat="@drawable/dark_mamont" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="333dp"
            android:layout_height="150dp"
            android:layout_marginTop="200dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="276dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Итоговая цифра:"
                    android:textAlignment="viewStart"
                    android:textColor="#303030"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/itog"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif"
                    android:text="-"
                    android:textAlignment="center"
                    android:textColor="#303030"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="-104dp"
                    tools:layout_editor_absoluteY="691dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="276dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Психотип:"
                    android:textAlignment="viewStart"
                    android:textColor="#303030"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/psih"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif"
                    android:text="-"
                    android:textAlignment="center"
                    android:textColor="#303030"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="276dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Возраст:"
                    android:textAlignment="textStart"
                    android:textColor="#303030"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/age"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif"
                    android:text="-"
                    android:textAlignment="center"
                    android:textColor="#303030"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>